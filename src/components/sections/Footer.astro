---
import Instagram from "../icons/Instagram.astro";
import Whatsapp from "../icons/Whatsapp.astro";
---

<footer class="w-full h-auto py-10 bg-slate-800">
  <div
    class="flex flex-col mx-auto max-w-5xl justify-between gap-4 items-center text-center"
  >
    <div class="flex-col gap-4 text-white">
      <address>Endereço</address>
      <span
        >&copy; 2025 HM Soluções Gráficas. Todos os direitos reservados.</span
      >
    </div>
    <div class="flex items-center gap-2">
      <a
        href=""
        target="_blank"
        rel="noopener noreferrer"
        ]
        class="p-3 rounded-full bg-slate-300/20 border border-white text-white hover:bg-white hover:text-slate-500/80 transition-colors"
      >
        <Whatsapp class="w-6" />
      </a>

      <a
        href=""
        target="_blank"
        rel="noopener noreferrer"
        ]
        class="p-3 rounded-full bg-slate-300/20 border border-white text-white hover:bg-white hover:text-slate-500/80 transition-colors"
      >
        <Instagram class="w-6" />
      </a>
    </div>
  </div>
</footer>
