---
import Button from "./ui/Button.astro";

const { title, description, services } = Astro.props;
---

<div class="w-full bg-blue-700 p-10 flex gap-7 text-white rounded-2xl shadow">
  <div class="flex flex-col gap-2">
    <!-- Title -->
    <h2 class="text-2xl font-medium">{title}</h2>
    <!-- Description -->
    <p>
      {description}
    </p>
    <!-- Buttons -->
    <div class="flex gap-2 mt-4 md:flex-wrap md:flex-row flex-col">
      {
        services.map((service: string) => (
          <Button variant="secondary">{service}</Button>
        ))
      }
    </div>
  </div>
</div>
